{
  "name": "conroy.codes",
  "version": "2.0.0",
  "scripts": {
    "build-prod": "run-s clean build",
    "build-rss": "node ./.next/server/scripts/build-rss.js",
    "build-sitemap": "node ./.next/server/scripts/build-sitemap.js",
    "build-stats": "ANALYZE=true npm run build",
    "find-deadcode": "ts-prune",
    "build": "next build && run-s build-rss build-sitemap",
    "clean": "del-cli '.next/**/*' '!.next/cache{,/**}' 'dist'",
    "dev": "next",
    "lint-fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "start": "next start",
    "stylelint": "stylelint src/**",
    "test": "jest --passWithNoTests",
    "type-check": "tsc --pretty --noEmit",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@next/mdx": "^10.0.9",
    "@primer/primitives": "^3.0.0",
    "@tailwindcss/typography": "^0.4.0",
    "@tailwindcss/ui": "^0.7.2",
    "@types/mdx-js__react": "^1.5.3",
    "@types/rss": "0.0.28",
    "github-vscode-theme": "github:primer/github-vscode-theme",
    "next": "^10.0.9",
    "next-inline-script": "0.0.1",
    "next-plausible": "^1.5.1",
    "next-seo": "^4.20.0",
    "next-themes": "0.0.12",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-tippy": "^1.4.0",
    "react-toggle-dark-mode": "^1.0.3",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-slug": "^4.0.1",
    "rehype-toc": "^3.0.2",
    "sass": "^1.32.8",
    "simple-functional-loader": "^1.2.1",
    "styled-jsx-plugin-postcss": "^4.0.1",
    "tailwindcss": "^2.0.3",
    "terser": "^5.6.1",
    "tinytime": "^0.2.6",
    "unist-util-visit": "^2.0.3"
  },
  "license": "ISC",
  "devDependencies": {
    "@next/bundle-analyzer": "^10.0.9",
    "@testing-library/dom": "^7.30.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "babel-jest": "^26.6.3",
    "del-cli": "^3.0.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "feed": "^4.2.2",
    "file-loader": "^6.0.0",
    "globby": "^11.0.2",
    "husky": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rehype-add-classes": "^1.0.0",
    "simple-functional-loader": "^1.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "ts-prune": "^0.8.8",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
